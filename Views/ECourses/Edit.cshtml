@model LearningManagementSystem.Data.ECourse

@{
    ViewData["Title"] = "Edit";
}

<h4>تعديل دورة لـ @Html.Raw(ViewBag.EmployeeName)</h4>
<hr />
<div class="row">
    <script src="~/js/jquery.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/moment.min.js"></script>

    <link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <script src="~/js/bootstrap-hijri-datepicker.min.js"></script>
    <script src="~/js/bootstrap-hijri-datepicker.js"></script>
    <script src="~/js/bootstrap-hijri-datetimepicker.min.js"></script>
    <script src="~/js/bootstrap-hijri-datetimepicker.js"></script>
    <link href="~/css/formstylesheet.css" rel="stylesheet" />

    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-body">
                <div id="multi-step-form-container">
                    <!-- Form Steps / Progress Bar -->
                    <ul class="form-stepper form-stepper-horizontal text-center mx-auto pl-0">
                        <!-- Step 1 -->
                        <li class="form-stepper-active text-center form-stepper-list" step="1">
                            <a class="mx-2">
                                <span class="form-stepper-circle">
                                    <span>1</span>
                                </span>
                                <div class="label">البيانات الاساسية للدورة</div>
                            </a>
                        </li>
                        <li class="form-stepper-unfinished text-center form-stepper-list" step="2">
                            <a class="mx-2">
                                <span class="form-stepper-circle text-muted">
                                    <span>2</span>
                                </span>
                                <div class="label text-muted">المرفقات</div>
                            </a>
                        </li>
                    </ul>
                    <!-- Step Wise Form Content -->
                    <form asp-action="Edit">
                        <div class="mt-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @* @Html.HiddenFor(c=>c.Idemployees) *@
                            @{
                                TempData["idEmp"] = ViewBag.id;
                            }
                            <input type="hidden" asp-for="IdemployeesCourses" />
                            <div class="form-group">
                                <label class="control-label">اسم الدورة</label>
                                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                                    <option>اختر</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">تاريخ بداية الدورة</label>
                                <input asp-for="DateOfStart" class="form-control hijri-date-input" />
                                <span asp-validation-for="DateOfStart" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">تاريخ نهاية الدورة</label>
                                <input asp-for="DateOfEnd" class="form-control hijri-date-input" />
                                <span asp-validation-for="DateOfEnd" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">تقييم الدورة</label>
                                <input asp-for="Rating" class="form-control" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="التالي" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
        
    </div>
</div>

<div>
    <a asp-controller="Employees" asp-action="Details" asp-route-id=" @Model.Idemployees"> <i class="bx bx-detail"></i>العودة لبيانات الموظف</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    $(".hijri-date-input").hijriDatePicker();
</script>