@model LearningManagementSystem.Data.Course

@{
    ViewData["Title"] = "Delete";
}

<h3>حذف</h3>


<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            رقم الدورة
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseNumber)
        </dd>
        <dt class = "col-sm-2">
            الدورة
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">العودة لقائمة الدورات<i class="bx bx-arrow-back"></i></a>
    </form>
</div>
