                        input: "text",
                        inputAttributes: {
                            autocapitalize: "off"
                        },
                        showCancelButton: true,
                        confirmButtonText: "ارجاع",
                        cancelButtonText: "إلغاء الامر",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax(
                                {
                                    url: url,
                                    data:
                                    {
                                        id: Id,
                                        rejectReason: result.value
                                    },
                                    type: 'POST',
                                    success: function (data) {
                                        Swal.fire({
                                            title: "تم !",
                                            text: "تم ارجاع البيانات الى المدقق",
                                            icon: "success",
                                            CloseOnConfirm: false,
                                            CloseOnCancel: false,
                                        }).then((result) => {
