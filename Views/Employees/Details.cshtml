                            type: 'POST',
                            success: function (data) {
                                Swal.fire({
                                    title: "تم !",
                                    text: "تم اعتماد البيانات بنجاح",
                                    icon: "success",
                                    CloseOnConfirm: false,
                                    CloseOnCancel: false,
                                }).then((result) => {
