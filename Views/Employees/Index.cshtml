@using LearningManagementSystem.Enums
@model IEnumerable<LearningManagementSystem.Data.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               الاسم
            </th>
            <th>
              رقم الهوية
            </th>
            <th>
               الرقم الوظيفي
            </th>
            <th>
                الجنس
            </th>
            <th>
                نوع الوظيفة
            </th>
            <th>
                الرتبة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identitynumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employeenumber)
            </td>
            <td>
                    @{
                        if (item.Gender == 1)
                        {
                            var description = Gender.male.GetDisplayName();
                            @Html.DisplayFor(s=>description)
                        }
                        else
                        {
                            var description = Gender.female.GetDisplayName();
                            @Html.DisplayFor(s => description)
                        }
                    }
                          
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JopTypeNavigation.JopName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank.Rankname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmployees">تعديل</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmployees">عرض</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmployees">حذف</a> |
                <a asp-controller="ECourses" asp-action="Create" asp-route-id="@item.IdEmployees">اضافة دورة</a> |
                <a asp-controller="EMedels" asp-action="Create" asp-route-id="@item.IdEmployees">اضافة نوط</a> |
                <a asp-controller="ETransfers" asp-action="Create" asp-route-id="@item.IdEmployees">اضافة تنقل</a> 
                    
            </td>
        </tr>
}
    </tbody>
</table>
